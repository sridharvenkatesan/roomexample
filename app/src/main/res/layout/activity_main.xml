<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.irontec.roomexample.MainActivity">

    <Button
        android:id="@+id/audios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_audios" />


    <Button
        android:id="@+id/stories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_stories" />

    <Button
        android:id="@+id/new_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_story" />

    <Button
        android:id="@+id/new_moments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_moments" />

</LinearLayout>
